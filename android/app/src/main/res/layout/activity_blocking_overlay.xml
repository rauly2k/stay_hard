<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@color/blocking_overlay_background">

    <ImageView
        android:id="@+id/blocked_app_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Blocked app icon" />

    <TextView
        android:id="@+id/blocked_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/blocking_text_primary"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/blocking_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app is blocked during your focus session"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/blocking_text_secondary"
        android:layout_marginBottom="32dp" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_focus_block"
        android:layout_marginBottom="24dp"
        android:tint="@color/primary"
        android:contentDescription="Focus icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay focused on what matters"
        android:textSize="14sp"
        android:textColor="@color/blocking_text_secondary"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/back_to_focus_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Focus"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/end_session_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Session"
        android:textSize="16sp"
        android:background="@drawable/button_outlined"
        android:textColor="@color/primary"
        android:padding="16dp" />

</LinearLayout>
